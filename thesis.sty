% from bxjsreport

\def\@makechapterhead#1{%
  \vspace*{0.1\Cvs}% 欧文は50pt		% 元は2\Cvsだった
  {\parindent \z@ \raggedright \normalfont
    \ifnum \c@secnumdepth >\m@ne
    \setlength\@tempdima{\linewidth}%
      \if@mainmatter
        \LARGE\headfont \@chapapp\thechapter\@chappos\hskip1\Cvs
        \addtolength\@tempdima{-\wd\z@}%
        \unhbox\z@\nobreak
        \vtop{\hsize\@tempdima}
%        \par\nobreak
%        \vskip \Cvs % 欧文は20pt
      \fi
    \fi
%    \interlinepenalty\@M
    \LARGE \headfont #1\par\nobreak
    \vskip \Cvs}} % 欧文は40pt		% 元は3\Cvsだった

\def\@makeschapterhead#1{%
  \vspace*{2\Cvs}% 欧文は50pt
  {\parindent \z@ \raggedright
    \normalfont
    \interlinepenalty\@M
    \LARGE \headfont #1\par\nobreak
    \vskip 3\Cvs}} % 欧文は40pt

